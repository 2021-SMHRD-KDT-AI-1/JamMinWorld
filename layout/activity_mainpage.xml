<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainpage"
    >

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="409dp"
        android:layout_height="180dp"
        android:layout_marginTop="476dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/animal2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="KIDS"
        android:textColor="#656363"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--   요기  -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/owl" />

    <TextView
        android:id="@+id/tv_glona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="프로필"
        android:textColor="#656363"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_img"
        app:layout_constraintStart_toStartOf="@+id/main_img"
        app:layout_constraintTop_toBottomOf="@+id/main_img" />

    <Button
        android:id="@+id/main_btn_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:foreground="@drawable/monkey"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_img"
        app:layout_constraintStart_toEndOf="@+id/main_img"
        app:layout_constraintTop_toTopOf="@+id/main_img"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/main_text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="메인게임"
        android:textColor="#656363"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_main"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/main_btn_main"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_main" />

    <Button
        android:id="@+id/main_btn_timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#984CDA"
        android:foreground="@drawable/babydeer"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_img" />

    <Button
        android:id="@+id/main_btn_random"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:backgroundTint="#F8E567"
        android:foreground="@drawable/bear"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_btn_timer"
        app:layout_constraintStart_toEndOf="@+id/main_btn_timer"
        app:layout_constraintTop_toTopOf="@+id/main_btn_timer"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/main_text_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="랜덤퀴즈"
        android:textColor="#656363"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_random"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/main_btn_random"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_random" />

    <TextView
        android:id="@+id/main_text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="타이머게임"
        android:textColor="#656363"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_timer"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/main_btn_timer"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_timer" />

    <Button
        android:id="@+id/main_btn_note"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#DA6D4C"
        android:foreground="@drawable/fox"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_timer" />

    <TextView
        android:id="@+id/main_text_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="오답노트"
        android:textColor="#656363"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_note"
        app:layout_constraintStart_toStartOf="@+id/main_btn_note"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_note" />

    <Button
        android:id="@+id/main_btn_mypage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:backgroundTint="#56D66C"
        android:foreground="@drawable/deer"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_btn_note"
        app:layout_constraintStart_toEndOf="@+id/main_btn_note"
        app:layout_constraintTop_toTopOf="@+id/main_btn_note" />

    <TextView
        android:id="@+id/main_text_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bunggrae_bold"
        android:text="My Page"
        android:textColor="#656363"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/main_btn_mypage"
        app:layout_constraintStart_toStartOf="@+id/main_btn_mypage"
        app:layout_constraintTop_toBottomOf="@+id/main_btn_mypage" />

    <androidx.cardview.widget.CardView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="46dp" />

</androidx.constraintlayout.widget.ConstraintLayout>